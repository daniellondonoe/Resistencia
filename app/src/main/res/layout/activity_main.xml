                android:layout_height="32dp" />
            <RadioButton
                android:drawableRight="@drawable/purp"
                android:id="@+id/Purp3"
                android:onClick="onRadioButton"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <RadioButton
                android:drawableRight="@drawable/gris"
                android:id="@+id/Gris3"
                android:layout_weight="1"
                android:onClick="onRadioButton"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <RadioButton
                android:drawableRight="@drawable/blan"
                android:id="@+id/Blan3"
                android:onClick="onRadioButton"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </RadioGroup>
        <Space android:layout_height="wrap_content"
            android:layout_width="45dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cuatro">

            <Space
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="25dp" />

            <RadioButton
                android:drawableRight="@drawable/cafe"
                android:id="@+id/Cafe"
                android:layout_weight="1"
                android:onClick="onRadioButton"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:checked="true" />
            <RadioButton
                android:drawableRight="@drawable/rojo"
                android:id="@+id/Rojo"
                android:layout_weight="1"
                android:onClick="onRadioButton"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <RadioButton
                android:drawableRight="@drawable/dor"
                android:id="@+id/Dorado"
                android:layout_weight="1"
                android:onClick="onRadioButton"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <RadioButton
                android:drawableRight="@drawable/pla"
                android:id="@+id/Plata"
                android:onClick="onRadioButton"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:text="Resistencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Resistencia"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:textAlignment="center" />
