                android:onClick="onRadioButton"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <RadioButton
                android:drawableRight="@drawable/purp"
                android:id="@+id/Purp2"
                android:onClick="onRadioButton"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <RadioButton
                android:drawableRight="@drawable/gris"
                android:id="@+id/Gris2"
                android:layout_weight="1"
                android:onClick="onRadioButton"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <RadioButton
                android:drawableRight="@drawable/blan"
                android:id="@+id/Blan2"
                android:layout_weight="1"
                android:onClick="onRadioButton"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </RadioGroup>
        <Space android:layout_height="wrap_content"
            android:layout_width="20dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tres">
            <RadioButton
                android:drawableRight="@drawable/negro"
                android:id="@+id/Negro3"
                android:layout_weight="1"
                android:onClick="onRadioButton"
                android:textAlignment="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:checked="true" />
            <RadioButton
                android:drawableRight="@drawable/cafe"
                android:id="@+id/Cafe3"
                android:onClick="onRadioButton"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="32dp"
